        <WindowViews:SystemInformationView x:Name="SystemInformationExpander" Grid.Row="1" Grid.Column="0"/>
        
        <WindowViews:TableOfContentsView x:Name="TableOfContentsExpander" Grid.Row="1" Grid.Column="1"/>

