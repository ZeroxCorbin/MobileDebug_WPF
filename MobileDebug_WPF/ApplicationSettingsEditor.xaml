<Window x:Class="MobileDebug_WPF.ApplicationSettingsEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MobileDebug_WPF"
        mc:Ignorable="d"
        Title="ApplicationSettings" Height="94.445" Width="611.112" Closing="Window_Closing" Icon="Resources/favicon.png">
    <Grid>

        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal">
                <Label Content="DxMobileMap.exe Path:" VerticalContentAlignment="Center"/>
                <TextBox x:Name="TxtDxMobileMapPath" Loaded="TxtDxMobileMapPath_Loaded" VerticalContentAlignment="Center" Width="380" IsReadOnly="True" IsReadOnlyCaretVisible="True"/>
                <Button x:Name="BtnSelectDxMobileMapPath" Content="Browse" Padding="3,1" Margin="5,0" Click="BtnSelectDxMobileMapPath_Click" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
